<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content">

    <TextView
            android:text="Name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/titleTextView"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="2dp" android:layout_marginRight="2dp"
            app:layout_constraintStart_toEndOf="@+id/VisualisationImageView" android:layout_marginLeft="2dp"
            android:layout_marginStart="2dp"
            app:layout_constraintTop_toTopOf="@+id/VisualisationImageView" android:layout_marginTop="8dp"
            android:textSize="12sp" android:textColor="#A6070606"/>
    <TextView
            android:text="Information"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/infoTextView"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="2dp" android:layout_marginRight="2dp"
            app:layout_constraintBottom_toBottomOf="@+id/VisualisationImageView"
            app:layout_constraintStart_toEndOf="@+id/VisualisationImageView" android:layout_marginStart="2dp"
            android:layout_marginLeft="2dp" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/titleTextView"
            android:textSize="11sp" android:textColor="@android:color/tertiary_text_light"/>
    <ImageView
            android:layout_width="178dp"
            android:layout_height="110dp" app:srcCompat="@drawable/ic_launcher_background"
            android:id="@+id/VisualisationImageView" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="2dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="2dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="0.5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/VisualisationImageView"
            android:id="@+id/cellLine" android:background="#AECCCACA" app:layout_constraintStart_toStartOf="parent"
    />
</android.support.constraint.ConstraintLayout>
